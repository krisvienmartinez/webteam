extends layout

block content
    h1 (Logo) Trail Rush
    p Welcome to Trail Rush

    // Wrapper
    #wrapper

        // USER INFO
        #userInfo
            h2 Runner's Information
            p
                strong Name:
                |  <input id='userInfoName'>
                br
                strong Age:
                |  <input id='userInfoAge'>
                br
                strong Gender:
                |  <input id='userInfoGender'>
                br
                strong Location:
                |  <input id='userInfoLocation'>
            button#btnGenQR Generate QR

            |  <div id="qrcode" style="width:250px; height:250px; margin-top:15px;"></div>
        // /USER INFO

        // USER LIST
        h2 Registered Runners
        #userList
            table
                thead
                    th Bib ID.
                    th Event
                    th Removed?
                tbody
        // /USER LIST

        // ADD USER
        h2 Add Runner
        #addUser
            fieldset
                input#inputUserName(type='text', placeholder='Bib ID')
                input#inputUserPlateno(type='text', placeholder='Event')
                br
                input#inputUserFullname(type='text', placeholder='Full Name')
                input#inputUserAge(type='text', placeholder='Age')
                br
                input#inputUserLocation(type='text', placeholder='Location')
                input#inputUserGender(type='text', placeholder='Gender')
                br
                button#btnAddUser Add User
                br
                br
        // /ADD USER



        // SEARCH USER
        h2 Search Runner
        #searchUser
            field
                input#inputSearchName(type='text', placeholder='Plate No.')
                br
                button#btnSearchUser Search User
        // /SEARCH USER



    // /WRAPPER